<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background='#FFD4CE'>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonroud"
            android:onClick="onButtonClick"
            android:text="QR Scan"
            android:textSize="20sp"
            android:textColor="#ffff"
            app:elevation="2dp"
            app:iconPadding="99dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width = "match_parent"
            android:orientation="horizontal"
            android:background = "@drawable/button_menu_view"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/textView_language"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/language_icon"
                android:layout_marginStart = "5dp"/>
            <Spinner
                android:id="@+id/spinner_language"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textColor="#ffff"
                android:entries="@array/languages" />
            <ImageView
                android:id="@+id/textView_nationality"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:src="@drawable/location_icon"/>
            <Spinner
                android:id="@+id/spinner_nationality"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textColor="#ffff"
                android:entries="@array/nationality" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="715dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/checkBox_egg_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox_beef_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_pork_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_chicken_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_shrimp_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_crab_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_squid_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_mackerel_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_shellfish_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_milk_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_peach_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_peanut_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_walnut_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_pine_nut_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_tomato_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_soybean_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_wheat_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_buck_wheat_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_sulfurous_acid_k"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:textColor="#151414"
                    android:layout_marginBottom="5dp"/>
                <CheckBox
                    android:id="@+id/checkBox_milk_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_egg_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_shrimp_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_fish_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />
                <CheckBox
                    android:id="@+id/checkBox_shellfishAlU_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_treeNuts_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_wheat_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_peanuts_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/checkBox_soybeans_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#151414"
                    android:textSize="30sp" />


            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView_consider"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/consider_button"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="27sp"/>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

